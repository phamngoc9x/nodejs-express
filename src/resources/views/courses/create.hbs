<div class="mt-4">
  <h3  class="mb-4">Tạo khoá học mới</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Nhập tiêu đề khoá học</label>
      <input type="text" name="name" class="form-control" value="{{course.name}}" id="name">
    </div>
    <div class="form-group">
      <label for="description">Nhập mô tả khoá học</label>
       <textarea name="description" class="form-control" value="{{course.description}}" id="description"></textarea>
     
    </div>
    <div class="form-group">
      <label for="videoId">Video ID</label>
      <input type="text" name="videoId" class="form-control" value="{{course.videoId}}" id="videoId">
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
       <input type="text" name="level" class="form-control" value="{{course.level}}" id="level">
    </div>
    
    <button type="submit" class="btn btn-primary">Thêm khoá học</button>
  </form>
</div>