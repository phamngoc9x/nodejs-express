<div class="mt-4">
  <h3 class="mb-4">Tạo bài viết mới</h3>
  <form method="POST" action="/news/store">
    <div class="form-group">
      <label for="name">Nhập tiêu đê bài viết</label>
      <input type="text" name="name" class="form-control" id="name">
    </div>
    <div class="form-group">
      <label for="description">Nhập mô tả bài viết</label>
      <input type="text" name="description" class="form-control" id="description">
    </div>
    <div class="form-group">
      <label for="body">Nhập nội dung bài viết</label>
      <textarea name="body" class="form-control" id="body"></textarea>
    </div>
    <div class="form-group">
      <label for="image">Nhập nội link ảnh</label>
      <input type="text" name="image" class="form-control" id="image" value="https://coin98.net/_next/image?url=https%3A%2F%2Ffile.coin98.com%2Fimages%2Fnfts-solana-phan-tich-mZ1CvMzGWZekHqpY.png&w=1920&q=75">
    </div>
    <button type="submit" class="btn btn-primary">Thêm bài viết</button>
  </form>
</div>