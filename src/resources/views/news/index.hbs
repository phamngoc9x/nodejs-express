<h1>News page</h1>
<div class="mt-4">
  <div class="row">
    {{#each blogs}}
      <div class="col-md-6 col-lg-4">
        <div class="card mb-4" style="width: 18rem;">
          <a href="/news/{{ this.slug }}">
            <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
          </a>
          <div class="card-body">
            <h5 class="card-title"><a href="/news/{{ this.slug }}">{{this.name}}</a></h5>
            <p class="card-text">{{ this.description}}</p>
            <a href="/news/{{ this.slug }}" class="btn btn-primary">Read more</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>